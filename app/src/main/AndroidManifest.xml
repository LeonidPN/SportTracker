<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sporttracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.StatisticActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.ExerciseRecordDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.PreferencesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.ExerciseRecordsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.GoalsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.AddExerciseRecordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Views.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>